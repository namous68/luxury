{% extends 'base.html.twig' %}

{% block title %}Candidature index{% endblock %}

{% block body %}
    <h1>Candidature index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>TitreOffer</th>
                <th>SocietyName</th>
                <th>Contact</th>
                <th>ContactMail</th>
                <th>DepositeDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidature in candidatures %}
            <tr>
                <td>{{ candidature.id }}</td>
                <td>{{ candidature.name }}</td>
                <td>{{ candidature.email }}</td>
                <td>{{ candidature.titreOffer }}</td>
                <td>{{ candidature.societyName }}</td>
                <td>{{ candidature.contact }}</td>
                <td>{{ candidature.contactMail }}</td>
                <td>{{ candidature.DepositeDate ? candidature.DepositeDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_candidature_crud_show', {'id': candidature.id}) }}">show</a>
                    <a href="{{ path('app_candidature_crud_edit', {'id': candidature.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_candidature_crud_new') }}">Create new</a>
{% endblock %}
